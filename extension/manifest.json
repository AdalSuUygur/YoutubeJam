{
  "manifest_version": 3,
  "name": "Youtube Jam",
  "version": "1.0",
  "description": "YouTube videolarını arkadaşlarınla senkronize izle.",
  "permissions": ["activeTab", "storage"],
  "action": {
      "default_popup": "popup.html",
      "default_js": ["popup.js"] 
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": [
        "socket.io.min.js", 
        "config.js",
        "content.js"
      ]
    }
  ]
}